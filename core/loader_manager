from loaders.base_loader import BaseLoader

class LoaderManager:
    def __init__(self):
        self.loaders: list[BaseLoader] = []

    def register_loader(self, loader: BaseLoader):
        self.loaders.append(loader)

    async def load_site(self) -> str:
        for loader in self.loaders:
            return await loader.load_site()
        raise ValueError(f"No loader found on start")
    
    async def load_link(self, url: str) -> str:
        for loader in self.loaders:
            return await loader.load_site()
        raise ValueError(f"No loader found for URL: {url}")
